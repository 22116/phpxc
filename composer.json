{
    "name": "lsbproject/phpxc",
    "description": "PHPXC. CLI to manage PHP project creation \uD83D\uDCE6",
    "type": "cli",
    "license": "MIT",
    "bin": "bin/phpxc",
    "authors": [
        {
            "name": "victor.fedorenko",
            "email": "fedorenko22116@gmail.com"
        }
    ],
    "prefer-stable": true,
    "minimum-stability": "dev",
    "require": {
        "php": "^8",
        "ext-yaml": "*",
        "symfony/console": "^v5.3",
        "mcstreetguy/composer-parser": "v1.1.0",
        "symfony/dependency-injection": "^5.3",
        "symfony/config": "^5.3",
        "twig/twig": "^3.0",
        "jetbrains/phpstorm-attributes": "^1.0",
        "symfony/yaml": "^5.3",
        "czproject/git-php": "^4.0"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "lsbproject/php-clean-code-rules": "^2.0",
        "phpstan/phpstan": "^0.12.93",
        "bluetree-service/symfony-console-style": "dev-master"
    },
    "scripts": {
        "lint": "phpcs",
        "lint:fix": "phpcbf",
        "analyze": "phpstan analyse src"
    },
    "autoload": {
        "psr-4": {
            "LSBProject\\PHPXC\\": "src/"
        }
    },
    "repositories":[
        {
            "type": "git",
            "url": "https://github.com/22116/symfony-console-style.git"
        }
    ]
}
