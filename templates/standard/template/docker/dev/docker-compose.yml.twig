{% if nodes['type.web.containerization.docker'] %}
version: '3.4'
services:
    app:
        build: .
        volumes:
            - ../..:/home/app
            - ~/.ssh:/.ssh

{% if nodes['type.web.containerization.docker.storage.mysql'] or nodes['type.web.containerization.docker.storage.mariadb'] %}
    db:
        image: {{ nodes['type.web.containerization.docker.storage'].extra['image'] }}
        command: --default-authentication-plugin=mysql_native_password
        restart: always
        ports:
            - 3306:3306
        environment:
            MYSQL_ROOT_PASSWORD: root
            MYSQL_DATABASE: auth

{% if endif %}
{% if nodes['type.web.containerization.docker.server.nginx'] %}
    nginx:
        image: nginx:stable-alpine
        ports:
            - 8000:80
        volumes:
            - ../..:/home/app
            - ./nginx.conf:/etc/nginx/conf.d/default.conf
        command: [nginx-debug, '-g', 'daemon off;']

{% endif %}
{% endif %}
