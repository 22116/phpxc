{
    "name": "{{ nodes.find('Composer\\Name').text }}",
    "description": "{{ nodes.find('Composer\\Description').text }}",
    "version": "1.0.0",
    "type": "cli",
    "license": "MIT",
    "bin": "bin/phpxc",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "{{ nodes.find('Composer\\PhpVersion').description }}"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest"
    },
    "scripts": {
        "lint": "phpcs",
        "lint:fix": "phpcbf",
        "analyze": "phpstan analyse src"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    }
}
